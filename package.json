{
  "name": "feathers-trigger",
  "version": "0.4.0",
  "description": "Add triggers and actions to your feathers app.",
  "author": "fratzinger",
  "homepage": "https://feathers-trigger.netlify.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/fratzinger/feathers-trigger"
  },
  "keywords": [
    "feathers",
    "feathers.js",
    "feathers-plugin",
    "trigger",
    "actions",
    "notify",
    "notification"
  ],
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "src/**",
    "dist/**"
  ],
  "scripts": {
    "build": "unbuild",
    "version": "npm run build",
    "release": "np",
    "test": "vitest run",
    "vitest": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "docs": "vuepress dev docs",
    "docs:build": "vuepress build docs"
  },
  "dependencies": {
    "@feathersjs/feathers": "^5.0.1",
    "feathers-hooks-common": "^7.0.1",
    "feathers-utils": "^2.1.2",
    "lodash": "^4.17.21",
    "object-replace-mustache": "^1.0.2",
    "sift": "^17.0.1",
    "type-fest": "^3.7.1"
  },
  "devDependencies": {
    "@feathersjs/memory": "^5.0.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.15.10",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vitest/coverage-c8": "^0.29.7",
    "date-fns": "^2.29.3",
    "eslint": "^8.36.0",
    "feathers-fletching": "^1.20.5",
    "feathers-graph-populate": "^4.0.0",
    "np": "^7.6.4",
    "nyc": "^15.1.0",
    "shx": "^0.3.4",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2",
    "unbuild": "^1.1.2",
    "vite": "^4.2.1",
    "vitest": "^0.29.7",
    "vuepress": "^2.0.0-beta.32"
  }
}
